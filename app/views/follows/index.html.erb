<div class="page-header">
  <h1>
    Follows
    <a href="/follows/new" class="btn btn-lg btn-success">New Follow</a>
  </h1>

  <h4>See who is tracking the trips</h4>

</div>


<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>Trip</th>

        <th>Organizer</th>

        <th>View</th>

        <th>Following</th>

        <th>Actions</th>
      </tr>

      <% @follows.each do |follow| %>
      <tr>

        <td><%= follow.trip.name %></td>

        <td><%= follow.trip.user.username %></td>

        <td><img src="<%= follow.trip.image_url %>" class="img-responsive" width= 50 pt></td>

        <td><%= follow.user.username %></td>

        <td>

          <a href="/follows/<%= follow.id %>" class="btn btn-primary">Show</a>
          <a href="/follows/<%= follow.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_follow/<%= follow.id %>" class="btn btn-danger" rel="nofollow">Delete</a>

        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
