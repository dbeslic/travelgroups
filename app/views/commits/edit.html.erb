<!-- Validation failure messages -->
<% if @commit.errors.any? %>
  <% @commit.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Commit #<%= @commit.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">

    <form action="/update_commit/<%= @commit.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">



      <!-- Label and input for trip_id -->

      <div class="form-group">
        <label for="trip_id" class="control-label">
          Trip
        </label>


        <input type="text" id="trip_id" name="trip_id" placeholder="Trip" class="form-control" value="<%= @commit.trip_id %>">

      </div>



      <!-- Label and input for user_id -->

      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>


        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @commit.user_id %>">

      </div>



      <!-- Label and input for friend_count -->

      <div class="form-group">
        <label for="friend_count" class="control-label">
          Friend count
        </label>


        <input type="text" id="friend_count" name="friend_count" placeholder="Friend count" class="form-control" value="<%= @commit.friend_count %>">

      </div>



      <button class="btn btn-warning">
        Update Commit
      </button>
      or

      <a href="/commits/<%= @commit.id %>">Cancel</a>


    </form>

  </div>
</div>
