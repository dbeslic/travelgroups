<!-- Validation failure messages -->
<% if @commit.errors.any? %>
  <% @commit.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Commit</h3>
</div>

<div class="row">
  <div class="col-md-12">

    <form action="/create_commit" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">



      <!-- Label and input for trip_id -->

      <div class="form-group">
        <label for="trip_id" class="control-label">
          Trip
        </label>


        <input type="text" id="trip_id" name="trip_id" placeholder="Trip" class="form-control" value="<%= @commit.trip_id %>">

      </div>



      <!-- Label and input for user_id -->

      <div class="form-group">

        <input type="hidden" id="user_id" name="user_id" class="form-control" value="<%= current_user.id %>">

      </div>



      <!-- Label and input for friend_count -->

      <button class="btn btn-success">
        Create Commit
      </button>
      or
      <a href="/commits">Cancel</a>

    </form>

  </div>
</div>
