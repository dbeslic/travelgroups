<div class="row">
  <div class="col-md-12">
    <div class="page-header">
      <h1> All Users</h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>User</th>

        <th>Profile</th>

        <th>About</th>

        <th>Leading Trips</th>

        <th>Joining Trips</th>
      </tr>

      <% @users.each do |user| %>
      <tr>

        <td>
          <a href="/users/<%= user.id %>"><img src="<%= user.avatar_url %>" class="img-circle" width= 50 pt></a>
        </td>

        <td>
          <a href="/users/<%= user.id %>"><%= user.username %></a>
        </td>

        <td><%= user.about_me %></td>

        <td>
          <% user.trips.each do |trip| %>
          <a href = "/trips/<%= trip.id %>"><%= trip.country  %></a>
          <% end %>
        </td>

        <td>
          <% user.commits.each do |commit| %>
          <a href = "/trips/<%= commit.trip.id %>"><%= commit.trip.country  %></a>
          <% end %>
        </td>

      </tr>
      <% end %>
    </table>
  </div>
</div>

